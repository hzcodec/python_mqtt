mosquitto_sub -h test.mosquitto.org -t "hello/world"

python sub.py
python pub.py


-----------------------------------------------------------------------

mqtt_client.py
mqtt_publish.py

mosquitto_sub -h test.mosquitto.org -t "test"
mosquitto_sub -h test.mosquitto.org -t "topic"

mosquitto_pub -d -h test.mosquitto.org -t test -m "Hello"
mosquitto_pub -d -h test.mosquitto.org -t topic -m "World!"

mosquitto_pub -d -h test.mosquitto.org -v -t topic -m "World!" --id client-one
mosquitto_pub -d -h test.mosquitto.org -v -t test -m "World!" --id client-one
